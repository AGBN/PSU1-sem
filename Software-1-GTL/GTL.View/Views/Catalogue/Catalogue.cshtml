@model GTL.View.Models.BookList


@{
    ViewBag.Title = "Catalogue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Catalogue</h2>



        @using (Html.BeginForm("Catalogue", "Index", FormMethod.Post))
         {
<div>

    @for (var i = 0; i < Model.LoanableBooks.Count; i++)

    {
        <hr />
        @Html.HiddenFor(m => Model.LoanableBooks[i].ID)
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].TitleName)
        @Html.Label(": " + Model.LoanableBooks[i].TitleName)
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].Edition)
        @Html.Label(": " + Model.LoanableBooks[i].Edition.ToString())
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].ISBN)
        @Html.Label(": " + Model.LoanableBooks[i].ISBN)
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].Language)
        @Html.Label(": " + Model.LoanableBooks[i].Language)
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].PublicationYear)
        @Html.Label(": " + Model.LoanableBooks[i].PublicationYear)
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].Subject)
        @Html.Label(": " + Model.LoanableBooks[i].Subject)
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].Type)
        @Html.Label(": " + Model.LoanableBooks[i].Type)
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].isLoanable)
        @Html.Label(": " + Model.LoanableBooks[i].isLoanable.ToString())
        <br />
        @Html.LabelFor(m => Model.LoanableBooks[i].Publisher)
        @Html.Label(": " + Model.LoanableBooks[i].Publisher)
        <br />
        <hr />



    }
</div>
            
         }
    


<div>
    @Html.ActionLink("Back","Index" ,"Home" )
</div>
